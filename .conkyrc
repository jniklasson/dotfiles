--[[
==============================================================================
|                                                                            |
|                    CONKY CONFIGURATION - NORDIC DARK THEME                 |
|                                                                            |
==============================================================================
]]

conky.config = {
    --==========================================================================
    --  WINDOW SETTINGS
    --==========================================================================
    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = true,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_colour = '#2E3440',
    own_window_argb_visual = true,
    own_window_argb_value = 230, -- 255 is solid

    --==========================================================================
    --  PLACEMENT
    --==========================================================================
    -- Use 'xinerama_head' to choose monitor (1=primary, 2=secondary, etc.)
    xinerama_head = 2,
    alignment = 'top_right',
    gap_x = 40,
    gap_y = 40,
    minimum_width = 320,
    minimum_height = 500,

    --==========================================================================
    --  GRAPHICS & FONTS
    --==========================================================================
    draw_shades = false,
    draw_outlines = false,
    draw_borders = false,
    draw_graph_borders = true,
    double_buffer = true,
    use_xft = true,
    font = 'Cantarell:size=10',
    xftalpha = 1,

    --==========================================================================
    --  COLORS (Nord Theme Palette)
    --==========================================================================
    default_color = '#D8DEE9',      -- nord4 - Standard text
    color1 = '#ECEFF4',             -- nord6 - Headers (white)
    color2 = '#88C0D0',             -- nord8 - Frostblue (accent 1)
    color3 = '#81A1C1',             -- nord9 - Frost blue (accent 2)
    color4 = '#5E81AC',             -- nord10 - Darker blue (graphs)
    color5 = '#BF616A',             -- nord11 - Red (Warnings)

    --==========================================================================
    --  BEHAVIOR
    --==========================================================================
    update_interval = 2.0,
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    imlib_cache_size = 0,
    uppercase = false,
    text_buffer_size = 2048,
};

conky.text = [[
#==============================================================================
#  TIME & DATE
#==============================================================================
${alignc}${color1}${font Cantarell:bold:size=38}${time %H:%M}${font}
${alignc}${color3}${font Cantarell:size=14}${time %A, %d %B}${font}
${alignc}${color2}Uptime: ${uptime}

${voffset 15}${color4}${hr 2}

#==============================================================================
#  SYSTEM & CPU
#==============================================================================
${voffset 10}${color1}${font Cantarell:bold:size=12}SYSTEM ${hr 2}${font}
${voffset 5}${color2}Host:${alignr}${nodename}
${color2}Kernel:${alignr}${kernel}

${voffset 10}${color1}${font Cantarell:bold:size=12}CPU${alignr}${cpu cpu0}%${font}
${color4}${cpubar cpu0 8,0}
${color3}Top CPU Processes:${alignr}CPU%
${color2} ${top name 1}${alignr}${top cpu 1}%
${color2} ${top name 2}${alignr}${top cpu 2}%
${color2} ${top name 3}${alignr}${top cpu 3}%

#==============================================================================
#  MEMORY & DISK
#==============================================================================
${voffset 10}${color1}${font Cantarell:bold:size=12}RAM${alignr}${mem} / ${memmax}${font}
${color4}${membar 8,0}
${color3}Top RAM Processes:${alignr}MEM%
${color2} ${top_mem name 1}${alignr}${top_mem mem_res 1}
${color2} ${top_mem name 2}${alignr}${top_mem mem_res 2}
${color2} ${top_mem name 3}${alignr}${top_mem mem_res 3}

${voffset 10}${color1}${font Cantarell:bold:size=12}DISK USAGE${font}
${color3}Home:${alignr}${fs_used /home} / ${fs_size /home}
${color4}${fs_bar 8 /home}

#==============================================================================
#  NETWORK
#==============================================================================
${voffset 10}${color1}${font Cantarell:bold:size=12}NETWORK${font}
${color3}Download: ${downspeedf enp7s0} KB/s${alignr}Upload: ${upspeedf enp7s0} KB/s
${color4}${downspeedgraph enp7s0 25,150} ${alignr}${upspeedgraph enp7s0 25,150}
${color2}Total Down: ${totaldown enp7s0}${alignr}Total Up: ${totalup enp7s0}

]];
