[include]
    path = ~/.gitconfig-local
[core]
	editor = vi
    autocrlf = input
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
    interactive = auto
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    lg = log --oneline --graph --decorate --all
    last = log -1 HEAD
    undo = reset --soft HEAD~1
    amend = commit --amend --no-edit
    df = diff
    dc = diff --cached
    pl = pull
    ps = push
    rb = rebase
    rbi = rebase -i
    st = stash
    stp = stash pop
    stl = stash list
[fetch]
    prune = true  # Automatically remove remote-tracking branches that no longer exist on the remote
